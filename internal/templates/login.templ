package templates

import "github.com/fouched/go-flaskr/internal/validation"


templ Login(f validation.Form) {

	<!doctype html>
	<html lang="en">
    @HtmlHeader()
	<body>
	@PageHeader()
	<div class="container">
        <div class="col-md-6 offset-md-3">
            <h2 class="mb-3 text-center">Login</h2>
            if f.Errors.Get("heading") != "" {
                <div class="text-danger">{f.Errors.Get("heading")}</div>
            }
            <form method="POST" action="/login">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="text" class="form-control" autocomplete="off">
                if f.Errors.Get("password") != "" {
                    <div class="text-danger mb-3">{f.Errors.Get("email")}</div>
                }
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" class="form-control">
                if f.Errors.Get("password") != "" {
                    <div class="text-danger mb-3">{f.Errors.Get("password")}</div>
                }
                <input type="submit" class="btn btn-primary mt-3" value="Login" />
            </form>
        </div>
	</div>
	</body>
	</html>
}